    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient_blue"
    android:id="@+id/activity_container_assignments">

    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="@string/transition_toolbar"/>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_container_homework"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.scottquach.homeworkchatbotassistant.activities.DisplayAssignmentsActivity">


    </FrameLayout>
</LinearLayout>