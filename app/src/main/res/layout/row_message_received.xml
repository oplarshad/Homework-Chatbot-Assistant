<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:layout_gravity="start"
    android:layout_marginBottom="4dp">

    <com.loopeer.shadow.ShadowView
        android:id="@+id/shadow_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:padding="10dp"
        android:elevation="6dp"
        android:foreground="?attr/selectableItemBackground"
        app:backgroundColor="#DFE1E4"
        app:shadowColor="#e0e0e0"
        app:shadowMargin="8dp"
        app:shadowRadius="14dp"
        app:cornerRadiusTL="14dp"
        app:cornerRadiusTR="14dp"
        app:cornerRadiusBR="14dp">

        <TextView
            android:id="@+id/view_message_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="12dp"
            android:text="testing testing testing test "
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp" />
    </com.loopeer.shadow.ShadowView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/shadow_view"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="6dp"
        android:src="@mipmap/ic_launcher" />

</RelativeLayout>